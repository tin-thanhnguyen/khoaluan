
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPageLogin.cshtml";
}

<div class="login-logo">
    <a href="#">
        <img src="~/images/icon/logo.png" alt="CoolAdmin">
    </a>
</div>
<div class="login-form">
    <form action="" method="post">
        <div class="form-group">
            <label>Email Address</label>
            <input class="au-input au-input--full form-group" type="email" name="email" placeholder="Email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="au-input au-input--full form-group" type="password" name="password" placeholder="Password">
        </div>
        <div class="login-checkbox">
            <label>
                <input type="checkbox" name="remember">Remember Me
            </label>
            <label>
                <a href="#">Forgotten Password?</a>
            </label>
        </div>
        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
        <div class="social-login-content">
            <div class="social-button">
                <button class="au-btn au-btn--block au-btn--blue m-b-20">sign in with facebook</button>
                <button class="au-btn au-btn--block au-btn--blue2">sign in with google</button>
            </div>
        </div>
    </form>
    <div class="register-link">
        <p>
            Don't you have account?
            @*<a href="register.html">Sign Up Here</a>*@
            @Html.ActionLink("Sign Up Here", "Register");
        </p>
    </div>
</div>
